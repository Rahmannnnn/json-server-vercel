{
	"functions": {
		"api/server.js": {
			"memory": 1024,
			"includeFiles": "db.json"
		}
	},
	"rewrites": [
		{
			"source": "/(.*)",
			"destination": "api/server.js"
		}
	],
	"headers": [
		{
			"source": "/api/data",
			"headers": [
				{
					"key": "Access-Control-Allow-Origin",
					"value": "*"
				},
				{
					"key": "Access-Control-Allow-Methods",
					"value": "GET, POST, PUT, DELETE"
				},
				{
					"key": "Access-Control-Allow-Headers",
					"value": "Content-Type, Authorization"
				}
			]
		}
	]
}
